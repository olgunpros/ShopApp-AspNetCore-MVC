<div class="list-group">
    <!-- "Tüm Kategoriler" bağlantısı -->
    <a href="@Url.Action("List", "Product")" class="list-group-item list-group-itemsFeature">
        Tüm Kategoriler
    </a> 

    <!-- Kategoriler üzerinden döngü -->
    @foreach (var category in Model) {
        <a href="@Url.Action("List", "Product", new { id = category.CategoryId })" 
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.CategoryId.ToString() ? "active" : "")">
            @category.Name
        </a>
    }
</div>
