@model shopapp.Models.Product

<form method="POST">
    <input type="hidden" name="ProductId" value=@Model.ProductId/>
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control">
    </div>
    
    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" value="@Model.Price"  class="form-control">
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="CategoryId">CategoryId</label>
       
        
        <select name="CategoryId" class="form-control">
            <option selected disabled>Se√ßiniz</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        
        
                
                
            



    </div>

    <div class="form-group">
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>